generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==========================================
// WORKSHOP AGGREGATE
// ==========================================

model Workshop {
  id            String   @id @default(uuid())
  ownerId       String   @map("owner_id")
  
  // Basic info
  businessName  String   @map("business_name")
  description   String?
  phone         String
  email         String?
  
  // Address
  street        String
  city          String
  state         String
  zipCode       String   @map("zip_code")
  latitude      Float
  longitude     Float
  
  // Price range
  priceRange    String   @default("MEDIUM") @map("price_range")
  
  // Ratings (calculated fields)
  overallRating Float    @default(0) @map("overall_rating")
  totalReviews  Int      @default(0) @map("total_reviews")
  
  // Photos
  photoUrls     String[] @map("photo_urls")
  
  // Status
  isApproved    Boolean  @default(false) @map("is_approved")
  
  // Relations
  specialties   WorkshopSpecialty[]
  schedule      WorkshopSchedule[]
  reviews       Review[]
  
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  @@index([ownerId])
  @@index([city, state])
  @@map("workshops")
}

// ==========================================
// WORKSHOP SPECIALTIES
// ==========================================

model WorkshopSpecialty {
  id                String   @id @default(uuid())
  workshopId        String   @map("workshop_id")
  specialtyType     String   @map("specialty_type")
  description       String?
  yearsOfExperience Int?     @map("years_of_experience")
  
  // Relations
  workshop Workshop @relation(fields: [workshopId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now()) @map("created_at")

  @@index([workshopId])
  @@map("workshop_specialties")
}

// ==========================================
// WORKSHOP SCHEDULE
// ==========================================

model WorkshopSchedule {
  id        String   @id @default(uuid())
  workshopId String  @map("workshop_id")
  dayOfWeek String   @map("day_of_week")
  openTime  String?  @map("open_time")
  closeTime String?  @map("close_time")
  isClosed  Boolean  @default(false) @map("is_closed")
  
  // Relations
  workshop Workshop @relation(fields: [workshopId], references: [id], onDelete: Cascade)

  @@unique([workshopId, dayOfWeek])
  @@index([workshopId])
  @@map("workshop_schedules")
}

// ==========================================
// REVIEWS
// ==========================================

model Review {
  id            String   @id @default(uuid())
  workshopId    String   @map("workshop_id")
  userId        String   @map("user_id")
  userName      String   @map("user_name")
  userAvatar    String?  @map("user_avatar")
  appointmentId String?  @map("appointment_id")
  
  // Ratings (1-5)
  overallRating         Int  @map("overall_rating")
  qualityRating         Int? @map("quality_rating")
  priceRating           Int? @map("price_rating")
  timeComplianceRating  Int? @map("time_compliance_rating")
  customerServiceRating Int? @map("customer_service_rating")
  
  // Review content
  comment  String?
  
  // Sentiment analysis (from Diagnosis Service ML)
  sentimentLabel String? @map("sentiment_label") // POSITIVE, NEUTRAL, NEGATIVE
  sentimentScore Float?  @map("sentiment_score") // 0-1
  
  // Workshop response
  workshopResponse String?   @map("workshop_response")
  respondedAt      DateTime? @map("responded_at")
  
  // Verification
  isVerified Boolean @default(false) @map("is_verified")
  
  // Relations
  workshop Workshop @relation(fields: [workshopId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([workshopId])
  @@index([userId])
  @@index([appointmentId])
  @@map("reviews")
}